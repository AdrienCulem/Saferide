<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Saferide.Views.LoginPageView"
             Title="Se connecter">
    <ContentPage.Content>
        <ScrollView Orientation = "Vertical" VerticalOptions="FillAndExpand">
            <StackLayout Spacing="20"
                   Padding="20"
                   VerticalOptions="Center">
                <Label Text="{Binding CheckingLogs}" TextColor="Red" FontSize="30" HorizontalTextAlignment="Center"/>
                <Entry x:Name ="usernameEntry"
               Placeholder="Nom d'utilisateur"
               Text="{Binding Username, Mode=OneWayToSource}"/>
                <Entry x:Name ="passwordEntry"
               Placeholder="Mot de passe"
               Text="{Binding Password, Mode=OneWayToSource}"
               IsPassword="true"/>
                <Button x:Name ="loginButton"
                Text="Se connecter"
                TextColor="White"
                BackgroundColor="Navy"
                Command="{Binding LoginClickedCommand}"/>
                <ActivityIndicator Color="Navy" IsRunning="{Binding isBusy}" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>