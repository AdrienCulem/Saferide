@model Saferide.Web.Models.LoginViewModel
@{
    ViewBag.Title = "Register";
    Layout = "../Shared/_LoginLayout.cshtml";
}
@using (Html.BeginForm("Login", "Account", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {id = "login-form", role = "form", style = "display:block;"}))
{
    @Html.AntiForgeryToken()
    <h2 class="login-title">LOGIN</h2>
    @Html.ValidationSummary(true, "", new {@class = "text-danger"})
    <div class="form-group">
        @Html.TextBoxFor(m => m.Email, new {@class = "form-control", placeholder = "Email", id = "email", tabindex = "1"})
        <br/>
        @Html.ValidationMessageFor(m => m.Email, "", new {@class = "text-danger"})
    </div>
    <div class="form-group">
        @Html.PasswordFor(m => m.Password, new {@class = "form-control", placeholder = "Password", id = "password", tabindex = "2"})
        <br/>
        @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
    </div>
    <div class="form-group">
    <span id="passwordForget">Forgot your password? Click @Html.ActionLink("here", "ForgotPassword")</span>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <input type="submit" name="login-submit" id="login-submit" tabindex="3" class="form-control btn btn-login" value="Login">
            </div>
        </div>
    </div>
}
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                @Html.ActionLink("OR REGISTER", "Register", null, new {@class="form-control btn btn-login"})
            </div>
        </div>
    </div>