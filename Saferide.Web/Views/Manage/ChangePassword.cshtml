@model Saferide.Web.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<h2 class="centered-text customized-font">Change your password</h2>
@using (Html.BeginForm("ChangePassword", "Manage", new {ReturnUrl = ViewBag.ReturnUrl}, FormMethod.Post, new {id = "login-form", role = "form", style = "display:block;"}))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new {@class = "customized-font text-danger validationSummary" })
    <div class="form-group">
        <span class="input input--hoshi">
            @Html.PasswordFor(m => m.OldPassword, new { @class = "input__field input__field--hoshi", id = "input-1", tabindex = "1", required = "required" })
            <label class="input__label input__label--hoshi input__label--hoshi-color-1" for="input-1">
                <span class="input__label-content input__label-content--hoshi">Current password</span>
            </label>
        </span>
    </div>
    <div class="form-group">
        <span class="input input--hoshi">
            @Html.PasswordFor(m => m.NewPassword, new { @class = "input__field input__field--hoshi", id = "input-2", tabindex = "2", required = "required" })
            <label class="input__label input__label--hoshi input__label--hoshi-color-2" for="input-2">
                <span class="input__label-content input__label-content--hoshi">New password</span>
            </label>
        </span>
    </div>
    <div class="form-group">
        <span class="input input--hoshi">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input__field input__field--hoshi", id = "input-3", tabindex = "3", required = "required" })
            <label class="input__label input__label--hoshi input__label--hoshi-color-3" for="input-3">
                <span class="input__label-content input__label-content--hoshi">Confirm new password</span>
            </label>
        </span>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-6 col-sm-offset-3">
                <input type="submit" name="login-submit" id="login-submit" tabindex="3" class="limit-width form-control btn btn-login" value="Change password">
            </div>
        </div>
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}